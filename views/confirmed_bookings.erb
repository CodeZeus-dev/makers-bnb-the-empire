<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= erb :head_css %>

</head>
<body>
<%= erb :header %>
<%= erb :navbar %>
<header>
  <h1>
    Confirmed Bookings
  </h1>
</header>
<main>
  <section class="confirmed-bookings-guest">
    <p>
    <h3>
      Confirmed Bookings as Guest
    </h3>
    </p>
    <ul>
      <% @bookings_guest.each do |booking| %>
<!--        <li><%#= booking.name %></li>-->
        <li><%= booking.check_in %></li>
      <% end %>
    </ul>
  </section>
  <section class="requests-received">
    <p>
      <h3>
        Confirmed Bookings as Host
      </h3>
    </p>
    <ul>
      <% @bookings_host.each do |booking| %>
<!--        <li><%#= booking.name %></li>-->
        <li><%= booking.check_in %></li>
      <% end %>
    </ul>
  </section><br>
  <p>Return to <a href="/dashboard">dashboard</a>.</p>
</main>
</body>
</html>