<!DOCTYPE html>
<html lang="en">
  <head>
    <%= erb :head_css %>
    <meta charset="UTF-8">
  </head>

  <body>
  <%= erb :header %>
  <%= erb :navbar %>
  <header>
      <h1>
        MakersBnB Spaces
      </h1>
    </header>

    <main>
      <div id="master" style="width: 90%; margin: 0 auto;">
        <div class="row">
        <% @spaces.each do |entry| %>
            <div class="col-sm-6">
              <div class="card">
                <div class="card-body">
                  <ul>
                    <li><%= entry.name %></li>
                    <li>Description: <%= entry.description %></li>
                    <li>Location: <%= entry.location %></li>
                    <li>Price: Â£<%= entry.price %></li>
                    <% user = User.find(id: entry.user_id) %>
                    <li>Host: <%= user.name %></li> <br>
                    <a href="#" class="btn btn-primary" style="background-color: #20B2AA; border: 0px;">Book Space</a>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </main>
  </body>
</html>


